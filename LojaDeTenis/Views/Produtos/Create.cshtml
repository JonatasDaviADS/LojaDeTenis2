@model LojaDeTenis.Models.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Produto.Nome" class="control-label"></label>
                <input asp-for="Produto.Nome" class="form-control" />
                <span asp-validation-for="Produto.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <textarea asp-for="Produto.Descricao" class="form-control"></textarea>
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.Preco" class="control-label"></label>
                <input asp-for="Produto.Preco" class="form-control" />
                <span asp-validation-for="Produto.Preco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.CategoriaId" class="control-label">Categoria</label>
                <select asp-for="Produto.CategoriaId" class="form-control" asp-items="Model.Categorias">
                    <option value="">-- Selecione uma categoria --</option>
                </select>
                <span asp-validation-for="Produto.CategoriaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Produto.ImagemUrl" class="control-label"></label>
                <input asp-for="Produto.ImagemUrl" class="form-control" />
                <span asp-validation-for="Produto.ImagemUrl" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
