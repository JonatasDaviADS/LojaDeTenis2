@model LojaDeTenis.Models.ViewModels.EstoqueViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Estoque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Estoque.Id" />
            <div class="form-group">
                <label asp-for="Estoque.ProdutoId" class="control-label"></label>
                <select asp-for="Estoque.ProdutoId" class ="form-control" asp-items="@(new SelectList(Model.Produtos, "Id", "Nome"))"></select>
                <span asp-validation-for="Estoque.ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque.Quantidade" class="control-label"></label>
                <input asp-for="Estoque.Quantidade" class="form-control" />
                <span asp-validation-for="Estoque.Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque.DataReabastecimento" class="control-label"></label>
                <input asp-for="Estoque.DataReabastecimento" class="form-control" />
                <span asp-validation-for="Estoque.DataReabastecimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
